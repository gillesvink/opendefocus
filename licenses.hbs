<h2>Third-party components:</h2>
<table>
    <tr>
        <td>Package</td>
        <td>Version</td>
        <td>License</td>
    </tr>
    {{#each crates}}
    <tr>
        <td><a
                href="{{#if package.repository}} {{package.repository}} {{else}} https://crates.io/crates/{{package.name}} {{/if}}">
                {{package.name}}
            </a></td>
        <td>{{package.version}}</td>
        <td>{{license}}</td>
    </tr>
    {{/each}}
</table>

<h2>All license text:</h2>
<ul class="licenses-list">
    {{#each licenses}}
        <li class="license">
            {{#if first_of_kind}}
                <h3 id="{{id}}">{{name}}</h3>
            {{/if}}
            <h4 id="{{id}}-{{@index}}">{{name}}</h4>
            <h5>Used by:</h5>
            <ul class="license-used-by">
                {{#each used_by}}
                <li><a href="{{#if crate.repository}}{{crate.repository}}{{else}}https://crates.io/crates/{{crate.name}}{{/if}}">{{crate.name}} {{crate.version}}</a></li>
                {{/each}}
            </ul>
            <pre class="license-text">{{text}}</pre>
        </li>
    {{/each}}
</ul>